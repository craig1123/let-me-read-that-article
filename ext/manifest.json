{
  "author": "Craig Walker",
  "manifest_version": 2,
  "name": "Let Me Read That Article",
  "short_name": "LMRTA",
  "description": "Read that article you've always wanted",
  "version": "1.5",
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.businessinsider.com/*",
        "https://www.sltrib.com/*",
        "https://www.nytimes.com/*",
        "https://www.medium.com/*",
        "https://medium.com/*",
        "https://www.cnbc.com/*",
        "https://www.washingtonpost.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "<all_urls>",
    "activeTab",
    "cookies",
    "webRequest",
    "webRequestBlocking"
  ]
}
