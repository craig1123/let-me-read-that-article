{
  "author": "Craig Walker",
  "manifest_version": 2,
  "name": "Let Me Read That Article",
  "short_name": "LMRTA",
  "description": "Scroll on",
  "version": "1.2",
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "content_scripts": [{
      "matches": ["<all_urls>"],
      "js":      ["content.js"]
  }],
  "permissions": [
    "<all_urls>",
    "activeTab",
    "cookies"
  ]
}
